<%- model_class = Aircraft -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:tail_number) %>:</strong></dt>
  <dd><%= @aircraft.tail_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:aircraft_type) %>:</strong></dt>
  <dd><%= @aircraft.aircraft_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:air_crew_id) %>:</strong></dt>
  <dd><%= @aircraft.air_crew_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fuel) %>:</strong></dt>
  <dd><%= @aircraft.fuel %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              aircrafts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_aircraft_path(@aircraft), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              aircraft_path(@aircraft),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
