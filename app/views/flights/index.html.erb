<%- model_class = Flight -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:aircraft_id) %></th>
      <th><%= model_class.human_attribute_name(:origin_id) %></th>
      <th><%= model_class.human_attribute_name(:destination_id) %></th>
      <th><%= model_class.human_attribute_name(:departure) %></th>
      <th><%= model_class.human_attribute_name(:arrival) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= link_to flight.id, flight_path(flight) %></td>
        <td><%= flight.aircraft.aircraft_type %></td>
        <td><%= flight.origin.title %></td>
        <td><%= flight.destination.title %></td>
        <td><%= flight.departure %></td>
        <td><%= flight.arrival %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_flight_path(flight), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      flight_path(flight),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_flight_path,
            :class => 'btn btn-primary' %>
