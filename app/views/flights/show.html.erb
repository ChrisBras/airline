<%- model_class = Flight -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:aircraft_id) %>:</strong></dt>
  <dd><%= @flight.aircraft.aircraft_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:origin_id) %>:</strong></dt>
  <dd><%= @flight.origin.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:destination_id) %>:</strong></dt>
  <dd><%= @flight.destination.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:departure) %>:</strong></dt>
  <dd><%= @flight.departure %></dd>
  <dt><strong><%= model_class.human_attribute_name(:arrival) %>:</strong></dt>
  <dd><%= @flight.arrival %></dd>

  <% if @flight.cargos %>
  <dt><strong>Cargo</strong></dt>
 
  <% @flight.cargos.each do |cargo| %>

  <dd><%= link_to cargo.contents, cargo %></dd>
  <% end %>
  <% end %>
</dl>



<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              flights_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_flight_path(@flight), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              flight_path(@flight),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
