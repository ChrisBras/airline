<%- model_class = Aircraft -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:tail_number) %></th>
      <th><%= model_class.human_attribute_name(:aircraft_type) %></th>
      <th><%= model_class.human_attribute_name(:air_crew_id) %></th>
      <th><%= model_class.human_attribute_name(:fuel) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @aircrafts.each do |aircraft| %>
      <tr>
        <td><%= link_to aircraft.id, aircraft_path(aircraft) %></td>
        <td><%= aircraft.tail_number %></td>
        <td><%= aircraft.aircraft_type %></td>
        <td><%= aircraft.air_crew_id %></td>
        <td><%= aircraft.fuel %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_aircraft_path(aircraft), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      aircraft_path(aircraft),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_aircraft_path,
            :class => 'btn btn-primary' %>
