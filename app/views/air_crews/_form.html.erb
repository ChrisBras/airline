<%= form_for @air_crew, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :pilot, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :pilot, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :navigator, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :navigator, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                air_crews_path, :class => 'btn' %>
  </div>
<% end %>
