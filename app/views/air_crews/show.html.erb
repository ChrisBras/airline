<%- model_class = AirCrew -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:pilot) %>:</strong></dt>
  <dd><%= @air_crew.pilot %></dd>
  <dt><strong><%= model_class.human_attribute_name(:navigator) %>:</strong></dt>
  <dd><%= @air_crew.navigator %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              air_crews_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_air_crew_path(@air_crew), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              air_crew_path(@air_crew),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
