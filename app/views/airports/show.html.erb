<%- model_class = Airport -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @airport.title %></dd>

  <% if !@airport.departures.empty?  %>
  <dt><strong>Departures</strong></dt>

  <% @airport.departures.each do |departure| %>

  <dd><%= link_to departure.id, flight_path(departure.id.to_i) %></dd>
  <% end %>
  <% end %>

  <% if !@airport.arrivals.empty? %>
  <dt><strong>Arrivals</strong></dt>

  <% @airport.arrivals.each do |arrival| %>

  <dd><%= link_to arrival.id, flight_path(arrival.id.to_i) %></dd>
  <% end %>
  <% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              airports_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_airport_path(@airport), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              airport_path(@airport),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
